<UserControl x:Class="PulsePanel.StatusTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Server Status &amp; Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Server Info -->
            <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" Padding="15" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Server Information" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Name:" Width="80" FontWeight="SemiBold"/>
                        <TextBlock Name="ServerNameText" Text="-"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Game:" Width="80" FontWeight="SemiBold"/>
                        <TextBlock Name="GameNameText" Text="-"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Status:" Width="80" FontWeight="SemiBold"/>
                        <TextBlock Name="StatusText" Text="-"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Port:" Width="80" FontWeight="SemiBold"/>
                        <TextBlock Name="PortText" Text="-"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Uptime:" Width="80" FontWeight="SemiBold"/>
                        <TextBlock Name="UptimeText" Text="-"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- System Resources -->
            <Border Grid.Column="1" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" Padding="15" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="System Resources" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="CPU:" Width="60" FontWeight="SemiBold"/>
                        <ProgressBar Name="CpuProgressBar" Width="100" Height="16" Margin="5,0"/>
                        <TextBlock Name="CpuText" Text="0%" Margin="5,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="RAM:" Width="60" FontWeight="SemiBold"/>
                        <ProgressBar Name="RamProgressBar" Width="100" Height="16" Margin="5,0"/>
                        <TextBlock Name="RamText" Text="0 MB" Margin="5,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Disk:" Width="60" FontWeight="SemiBold"/>
                        <ProgressBar Name="DiskProgressBar" Width="100" Height="16" Margin="5,0"/>
                        <TextBlock Name="DiskText" Text="0%" Margin="5,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Quick Actions -->
        <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" Padding="15" Margin="0,15,0,0">
            <StackPanel>
                <TextBlock Text="Quick Actions" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <Button Name="ViewLogsBtn" Content="📄 View Logs" Padding="8,4" Margin="0,0,10,0" Click="ViewLogs_Click"/>
                    <Button Name="OpenFolderBtn" Content="📁 Open Folder" Padding="8,4" Margin="0,0,10,0" Click="OpenFolder_Click"/>
                    <Button Name="ConnectBtn" Content="🔗 Connect" Padding="8,4" Margin="0,0,10,0" Click="Connect_Click"/>
                    <Button Name="FirewallBtn" Content="🛡️ Open Firewall" Padding="8,4" Click="Firewall_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>