<UserControl x:Class="PulsePanel.StatusTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Server Status &amp; Information" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Server Info -->
            <Border Grid.Column="0" Background="White" BorderBrush="#E1E5E9" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,12,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.05" ShadowDepth="2" BlurRadius="6"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="â„¹ï¸" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Server Information" FontWeight="Bold" FontSize="16" Foreground="#2C3E50"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Name:" Width="80" FontWeight="SemiBold"/>
                        <TextBlock Name="ServerNameText" Text="-"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Game:" Width="80" FontWeight="SemiBold"/>
                        <TextBlock Name="GameNameText" Text="-"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Status:" Width="80" FontWeight="SemiBold"/>
                        <TextBlock Name="StatusText" Text="-"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Port:" Width="80" FontWeight="SemiBold"/>
                        <TextBlock Name="PortText" Text="-"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Uptime:" Width="80" FontWeight="SemiBold"/>
                        <TextBlock Name="UptimeText" Text="-"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- System Resources -->
            <Border Grid.Column="1" Background="White" BorderBrush="#E1E5E9" BorderThickness="1" CornerRadius="8" Padding="20" Margin="12,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.05" ShadowDepth="2" BlurRadius="6"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="ðŸ“Š" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="System Resources" FontWeight="Bold" FontSize="16" Foreground="#2C3E50"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="CPU:" Width="60" FontWeight="SemiBold"/>
                        <ProgressBar Name="CpuProgressBar" Width="100" Height="16" Margin="5,0"/>
                        <TextBlock Name="CpuText" Text="0%" Margin="5,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="RAM:" Width="60" FontWeight="SemiBold"/>
                        <ProgressBar Name="RamProgressBar" Width="100" Height="16" Margin="5,0"/>
                        <TextBlock Name="RamText" Text="0 MB" Margin="5,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Disk:" Width="60" FontWeight="SemiBold"/>
                        <ProgressBar Name="DiskProgressBar" Width="100" Height="16" Margin="5,0"/>
                        <TextBlock Name="DiskText" Text="0%" Margin="5,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Quick Actions -->
        <Border Background="White" BorderBrush="#E1E5E9" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,20,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" ShadowDepth="2" BlurRadius="6"/>
            </Border.Effect>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock Text="âš¡" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Quick Actions" FontWeight="Bold" FontSize="16" Foreground="#2C3E50"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Name="ViewLogsBtn" Content="ðŸ“„ View Logs" Padding="8,4" Margin="0,0,10,0" Click="ViewLogs_Click"/>
                    <Button Name="OpenFolderBtn" Content="ðŸ“ Open Folder" Padding="8,4" Margin="0,0,10,0" Click="OpenFolder_Click"/>
                    <Button Name="ConnectBtn" Content="ðŸ”— Connect" Padding="8,4" Margin="0,0,10,0" Click="Connect_Click"/>
                    <Button Name="FirewallBtn" Content="ðŸ›¡ï¸ Open Firewall" Padding="8,4" Click="Firewall_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>