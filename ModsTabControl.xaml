<UserControl x:Class="PulsePanel.ModsTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Workshop &amp; Mod Manager" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Steam Workshop IDs" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="Enter Workshop IDs (one per line) for automatic download:" FontSize="11" Foreground="#666" Margin="0,0,0,5"/>
                <TextBox Name="WorkshopIdsBox" Height="80" AcceptsReturn="True" TextWrapping="Wrap" 
                         FontFamily="Consolas" VerticalScrollBarVisibility="Auto"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Name="DownloadModsBtn" Content="â¬‡ Download Mods" Padding="8,4" Click="DownloadMods_Click"/>
                    <Button Name="ClearModsBtn" Content="ðŸ—‘ Clear List" Padding="8,4" Margin="10,0,0,0" Click="ClearMods_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Mod Directory Browser" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button Name="RefreshModsBtn" Content="ðŸ”„ Refresh" Margin="10,0,0,0" Padding="6,2" Click="RefreshMods_Click"/>
                    <Button Name="OpenModFolderBtn" Content="ðŸ“ Open Folder" Margin="10,0,0,0" Padding="6,2" Click="OpenModFolder_Click"/>
                </StackPanel>
                
                <ListBox Name="ModFilesListBox" Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"/>
            </Grid>
        </Border>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Name="ValidateModsBtn" Content="âœ“ Validate Mods" Padding="8,4" Click="ValidateMods_Click"/>
        </StackPanel>
    </Grid>
</UserControl>