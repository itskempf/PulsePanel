<Window x:Class="PulsePanel.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="500" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Application Settings" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
            <Label Content="SteamCMD Path:" Width="120" VerticalAlignment="Center"/>
            <TextBox Name="SteamCmdPathBox" Width="280" VerticalAlignment="Center"/>
            <Button Content="..." Width="30" Click="BrowseSteamCmd_Click" Margin="5,0,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
            <Label Content="Default Install Path:" Width="120" VerticalAlignment="Center"/>
            <TextBox Name="DefaultInstallPathBox" Width="280" VerticalAlignment="Center"/>
            <Button Content="..." Width="30" Click="BrowseInstallPath_Click" Margin="5,0,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Name="OkButton" Content="OK" Width="75" Height="25" Margin="5,0" Click="Ok_Click"/>
            <Button Name="CancelButton" Content="Cancel" Width="75" Height="25" Margin="5,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>