<UserControl x:Class="PulsePanel.DockerTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Docker Status Header -->
        <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Name="DockerStatusIcon" Text="ðŸ³" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Name="DockerStatusText" Text="Docker Status: Checking..." FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Name="RefreshContainersBtn" Content="ðŸ”„ Refresh" Click="RefreshContainers_Click" 
                            Background="#3498DB" Foreground="White" Padding="12,6" Margin="0,0,8,0" 
                            BorderThickness="0" Cursor="Hand"/>
                    <Button Name="CreateContainerBtn" Content="âž• Create" Click="CreateContainer_Click" 
                            Background="#27AE60" Foreground="White" Padding="12,6" 
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Container List -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="#E1E5E9" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8,8,0,0" Padding="16,12">
                    <TextBlock Text="ðŸ³ Docker Containers" FontWeight="Bold" FontSize="16" Foreground="#2C3E50"/>
                </Border>
                
                <DataGrid Name="ContainersGrid" Grid.Row="1" AutoGenerateColumns="False" 
                          HeadersVisibility="Column" GridLinesVisibility="None" 
                          Background="White" BorderThickness="0" Margin="12"
                          SelectionChanged="ContainersGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                        <DataGridTextColumn Header="Ports" Binding="{Binding Ports}" Width="200"/>
                        <DataGridTemplateColumn Header="Actions" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="â–¶" Click="StartContainer_Click" 
                                                Background="#27AE60" Foreground="White" 
                                                Width="30" Height="25" Margin="2" 
                                                BorderThickness="0"/>
                                        <Button Content="â¹" Click="StopContainer_Click" 
                                                Background="#E74C3C" Foreground="White" 
                                                Width="30" Height="25" Margin="2" 
                                                BorderThickness="0"/>
                                        <Button Content="ðŸ“‹" Click="ViewLogs_Click" 
                                                Background="#3498DB" Foreground="White" 
                                                Width="30" Height="25" Margin="2" 
                                                BorderThickness="0"/>
                                        <Button Content="ðŸ—‘" Click="RemoveContainer_Click" 
                                                Background="#95A5A6" Foreground="White" 
                                                Width="30" Height="25" Margin="2" 
                                                BorderThickness="0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>