<Window x:Class="PulsePanel.AddServerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Server" Height="400" Width="500" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
            <Label Content="Server Name:" Width="120"/>
            <TextBox Name="ServerNameBox" Width="300"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
            <Label Content="Game:" Width="120"/>
            <ComboBox Name="GameComboBox" Width="300" SelectionChanged="GameComboBox_SelectionChanged">
                <!-- Source Engine Games -->
                <ComboBoxItem Content="Counter-Strike 2" Tag="730"/>
                <ComboBoxItem Content="Garry's Mod" Tag="4020"/>
                <ComboBoxItem Content="Team Fortress 2" Tag="232250"/>
                <ComboBoxItem Content="Left 4 Dead 2" Tag="222860"/>
                <ComboBoxItem Content="Half-Life Dedicated Server" Tag="90"/>
                
                <!-- Military/Tactical Games -->
                <ComboBoxItem Content="Arma 3" Tag="233780"/>
                <ComboBoxItem Content="Squad" Tag="403240"/>
                <ComboBoxItem Content="Post Scriptum" Tag="736220"/>
                <ComboBoxItem Content="Hell Let Loose" Tag="686810"/>
                <ComboBoxItem Content="Insurgency: Sandstorm" Tag="581330"/>
                
                <!-- Survival/Crafting Games -->
                <ComboBoxItem Content="Rust" Tag="258550"/>
                <ComboBoxItem Content="7 Days to Die" Tag="294420"/>
                <ComboBoxItem Content="The Forest" Tag="556450"/>
                <ComboBoxItem Content="Valheim" Tag="896660"/>
                <ComboBoxItem Content="Project Zomboid" Tag="380870"/>
                <ComboBoxItem Content="Conan Exiles" Tag="443030"/>
                <ComboBoxItem Content="ARK: Survival Ascended" Tag="2430930"/>
                <ComboBoxItem Content="ARK: Survival Evolved" Tag="376030"/>
                
                <!-- Space/Sci-Fi Games -->
                <ComboBoxItem Content="Space Engineers" Tag="298740"/>
                <ComboBoxItem Content="Astroneer" Tag="728470"/>
                <ComboBoxItem Content="Satisfactory" Tag="526870"/>
                
                <!-- Racing Games -->
                <ComboBoxItem Content="BeamNG.drive" Tag="284160"/>
                <ComboBoxItem Content="Assetto Corsa" Tag="244210"/>
                <ComboBoxItem Content="rFactor 2" Tag="365960"/>
                
                <!-- Other Popular Games -->
                <ComboBoxItem Content="Palworld" Tag="2394010"/>
                <ComboBoxItem Content="Enshrouded" Tag="1203620"/>
                <ComboBoxItem Content="V Rising" Tag="1604030"/>
                <ComboBoxItem Content="DayZ" Tag="223350"/>
                <ComboBoxItem Content="Unturned" Tag="304930"/>
                <ComboBoxItem Content="Foundry" Tag="983870"/>
                <ComboBoxItem Content="Farming Simulator 22" Tag="1248130"/>
                <ComboBoxItem Content="Vintage Story" Tag="559080"/>
                <ComboBoxItem Content="Eco" Tag="382310"/>
            </ComboBox>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
            <Label Content="App ID:" Width="120"/>
            <TextBox Name="AppIdBox" Width="300"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5">
            <Label Content="Install Path:" Width="120"/>
            <TextBox Name="InstallPathBox" Width="250"/>
            <Button Content="..." Width="30" Click="BrowseInstallPath_Click" Margin="5,0,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,5">
            <Label Content="Executable:" Width="120"/>
            <TextBox Name="ExecutableBox" Width="300"/>
        </StackPanel>
        
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,5">
            <Label Content="Port:" Width="120"/>
            <TextBox Name="PortBox" Width="300" Text="27015"/>
        </StackPanel>
        
        <StackPanel Grid.Row="6" Orientation="Vertical" Margin="0,5">
            <Label Content="Startup Arguments:"/>
            <TextBox Name="StartupArgsBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>
        
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Name="OkButton" Content="OK" Width="75" Height="25" Margin="5,0" Click="Ok_Click"/>
            <Button Name="CancelButton" Content="Cancel" Width="75" Height="25" Margin="5,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>