<Window x:Class="PulsePanel.AddServerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Server" Height="400" Width="500" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
            <Label Content="Server Name:" Width="120"/>
            <TextBox Name="ServerNameBox" Width="300"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
            <Label Content="Game:" Width="120"/>
            <ComboBox Name="GameComboBox" Width="300" SelectionChanged="GameComboBox_SelectionChanged">
                <ComboBoxItem Content="Counter-Strike 2" Tag="730"/>
                <ComboBoxItem Content="Garry's Mod" Tag="4020"/>
                <ComboBoxItem Content="Team Fortress 2" Tag="232250"/>
                <ComboBoxItem Content="Left 4 Dead 2" Tag="222860"/>
            </ComboBox>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
            <Label Content="App ID:" Width="120"/>
            <TextBox Name="AppIdBox" Width="300"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5">
            <Label Content="Install Path:" Width="120"/>
            <TextBox Name="InstallPathBox" Width="250"/>
            <Button Content="..." Width="30" Click="BrowseInstallPath_Click" Margin="5,0,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,5">
            <Label Content="Executable:" Width="120"/>
            <TextBox Name="ExecutableBox" Width="300"/>
        </StackPanel>
        
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,5">
            <Label Content="Port:" Width="120"/>
            <TextBox Name="PortBox" Width="300" Text="27015"/>
        </StackPanel>
        
        <StackPanel Grid.Row="6" Orientation="Vertical" Margin="0,5">
            <Label Content="Startup Arguments:"/>
            <TextBox Name="StartupArgsBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>
        
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Name="OkButton" Content="OK" Width="75" Height="25" Margin="5,0" Click="Ok_Click"/>
            <Button Name="CancelButton" Content="Cancel" Width="75" Height="25" Margin="5,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>