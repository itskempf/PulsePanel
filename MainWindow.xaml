<Window x:Class="PulsePanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PulsePanel"
        mc:Ignorable="d"
        Title="PulsePanel - Professional Game Server Manager" Height="800" Width="1400" 
        WindowStartupLocation="CenterScreen" Background="#F0F2F5">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5BA0F2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A80D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8,0,0,8" 
                                Margin="0,0,0,0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8F4FD"/>
                                <Setter Property="Foreground" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Server List Style -->
        <Style x:Key="ServerListBox" TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <Style x:Key="ServerListItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F8FF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="280"/>
        </Grid.RowDefinitions>
        
        <!-- Modern Header/Toolbar -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E1E5E9" BorderThickness="0,0,0,1">
            <Grid Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo/Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="🎮" FontSize="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="PulsePanel" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                    <TextBlock Text="Professional Game Server Manager" FontSize="12" Foreground="#7F8C8D" VerticalAlignment="Bottom" Margin="8,0,0,4"/>
                </StackPanel>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Button Name="AddServerBtn" Content="➕ Add Server" Click="AddServer_Click" Style="{StaticResource ModernButton}" Background="#27AE60"/>
                    <Button Name="ScanServersBtn" Content="🔍 Scan" Click="ScanServers_Click" Style="{StaticResource ModernButton}" Background="#8E44AD"/>
                    <Rectangle Width="1" Fill="#E1E5E9" Margin="8,12"/>
                    <Button Name="StartServerBtn" Content="▶ Start" Click="StartServer_Click" Style="{StaticResource ModernButton}" Background="#27AE60" IsEnabled="False"/>
                    <Button Name="StopServerBtn" Content="⏹ Stop" Click="StopServer_Click" Style="{StaticResource ModernButton}" Background="#E74C3C" IsEnabled="False"/>
                    <Button Name="RestartServerBtn" Content="🔄 Restart" Click="RestartServer_Click" Style="{StaticResource ModernButton}" Background="#F39C12" IsEnabled="False"/>
                    <Rectangle Width="1" Fill="#E1E5E9" Margin="8,12"/>
                    <Button Name="UpdateServerBtn" Content="⬇ Update" Click="UpdateServer_Click" Style="{StaticResource ModernButton}" Background="#3498DB" IsEnabled="False"/>
                    <Button Name="SettingsBtn" Content="⚙ Settings" Click="Settings_Click" Style="{StaticResource ModernButton}" Background="#95A5A6"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Dashboard -->
        <Grid Grid.Row="1" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Server List Panel -->
            <Border Grid.Column="0" Background="White" CornerRadius="12" BorderBrush="#E1E5E9" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="12,12,0,0" Padding="20,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🖥️" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Game Servers" FontWeight="Bold" FontSize="16" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <ListBox Name="ServerListBox" Grid.Row="1" SelectionChanged="ServerList_SelectionChanged" 
                             Style="{StaticResource ServerListBox}" Margin="12" ItemContainerStyle="{StaticResource ServerListItem}"/>
                </Grid>
            </Border>
            
            <!-- Server Management Panel -->
            <Border Grid.Column="2" Background="White" CornerRadius="12" BorderBrush="#E1E5E9" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Vertical Tab Menu -->
                    <Border Grid.Column="0" Background="#FAFBFC" CornerRadius="12,0,0,12" BorderBrush="#E1E5E9" BorderThickness="0,0,1,0">
                        <StackPanel Name="TabMenu" Margin="12,20">
                            <TextBlock Text="Navigation" FontSize="12" FontWeight="Bold" Foreground="#7F8C8D" Margin="16,0,0,12"/>
                            <Button Name="StatusTab" Content="📊 Status" Click="Tab_Click" Tag="Status" Style="{StaticResource TabButton}"/>
                            <Button Name="ConfigTab" Content="⚙️ Config" Click="Tab_Click" Tag="Config" Style="{StaticResource TabButton}"/>
                            <Button Name="ModsTab" Content="🔧 Mods" Click="Tab_Click" Tag="Mods" Style="{StaticResource TabButton}"/>
                            <Button Name="ScheduleTab" Content="⏰ Schedule" Click="Tab_Click" Tag="Schedule" Style="{StaticResource TabButton}"/>
                            <Button Name="DockerTab" Content="🐳 Docker" Click="Tab_Click" Tag="Docker" Style="{StaticResource TabButton}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Tab Content Area -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="24,20">
                        <ContentPresenter Name="TabContent"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Enhanced Console Output -->
        <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="12" BorderBrush="#3C3C3C" BorderThickness="1" Margin="12">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.2" ShadowDepth="3" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="#2D2D30" CornerRadius="12,12,0,0" Padding="20,12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💻" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Console Output" Foreground="White" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        <Button Name="ClearConsoleBtn" Content="🗑️ Clear" Click="ClearConsole_Click" 
                                Margin="16,0,0,0" Padding="12,4" Background="#404040" Foreground="White" 
                                BorderThickness="0" FontSize="12" Cursor="Hand"/>
                    </StackPanel>
                </Border>
                
                <ScrollViewer Name="ConsoleScroller" Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#1E1E1E" Padding="4">
                    <RichTextBox Name="ConsoleOutput" IsReadOnly="True" Background="#1E1E1E" 
                                 FontFamily="JetBrains Mono, Consolas, Courier New" FontSize="12" BorderThickness="0" 
                                 Padding="16" VerticalScrollBarVisibility="Disabled"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>