<Window x:Class="PulsePanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PulsePanel"
        mc:Ignorable="d"
        Title="PulsePanel - SteamCMD Server Manager" Height="700" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Height="45" Background="#2D2D30">
            <Button Name="AddServerBtn" Content="Add Server" Click="AddServer_Click" Padding="12,6" Background="#007ACC" Foreground="White" BorderBrush="#007ACC"/>
            <Button Name="ScanServersBtn" Content="Scan Servers" Click="ScanServers_Click" Padding="12,6" Background="#68217A" Foreground="White" BorderBrush="#68217A"/>
            <Separator/>
            <Button Name="StartServerBtn" Content="▶ Start" Click="StartServer_Click" Padding="12,6" IsEnabled="False" Background="#16825D" Foreground="White" BorderBrush="#16825D"/>
            <Button Name="StopServerBtn" Content="⏹ Stop" Click="StopServer_Click" Padding="12,6" IsEnabled="False" Background="#D13438" Foreground="White" BorderBrush="#D13438"/>
            <Button Name="RestartServerBtn" Content="🔄 Restart" Click="RestartServer_Click" Padding="12,6" IsEnabled="False" Background="#FF8C00" Foreground="White" BorderBrush="#FF8C00"/>
            <Separator/>
            <Button Name="UpdateServerBtn" Content="⬇ Update" Click="UpdateServer_Click" Padding="12,6" IsEnabled="False" Background="#0078D4" Foreground="White" BorderBrush="#0078D4"/>
            <Separator/>
            <Button Name="SettingsBtn" Content="⚙ Settings" Click="Settings_Click" Padding="12,6" Background="#5C2D91" Foreground="White" BorderBrush="#5C2D91"/>
        </ToolBar>
        
        <!-- Main Dashboard -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Server List Panel -->
            <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Servers" FontWeight="Bold" FontSize="14" Margin="10,8" Foreground="#333"/>
                    <ListBox Name="ServerListBox" Grid.Row="1" SelectionChanged="ServerList_SelectionChanged" 
                             Background="Transparent" BorderThickness="0" Margin="5,0,5,5"/>
                </Grid>
            </Border>
            
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#E0E0E0"/>
            
            <!-- Server Management Panel with Vertical Tabs -->
            <Border Grid.Column="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Margin="5">
                <Grid Name="ServerManagementGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Vertical Tab Menu -->
                    <Border Grid.Column="0" Background="#F8F8F8" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                        <StackPanel Name="TabMenu" Margin="5">
                            <Button Name="StatusTab" Content="📊 Status" Click="Tab_Click" Tag="Status" 
                                    Style="{x:Null}" Background="#007ACC" Foreground="White" 
                                    Padding="8" Margin="0,2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
                            <Button Name="ConfigTab" Content="⚙ Config" Click="Tab_Click" Tag="Config" 
                                    Style="{x:Null}" Background="Transparent" Foreground="#333" 
                                    Padding="8" Margin="0,2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
                            <Button Name="ModsTab" Content="🔧 Mods" Click="Tab_Click" Tag="Mods" 
                                    Style="{x:Null}" Background="Transparent" Foreground="#333" 
                                    Padding="8" Margin="0,2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
                            <Button Name="ScheduleTab" Content="⏰ Schedule" Click="Tab_Click" Tag="Schedule" 
                                    Style="{x:Null}" Background="Transparent" Foreground="#333" 
                                    Padding="8" Margin="0,2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Tab Content Area -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                        <ContentPresenter Name="TabContent" Margin="10"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Enhanced Console Output -->
        <Border Grid.Row="2" Background="#1E1E1E" BorderBrush="#3C3C3C" BorderThickness="1" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="#2D2D30" Padding="8,4">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Console Output" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                        <Button Name="ClearConsoleBtn" Content="Clear" Click="ClearConsole_Click" 
                                Margin="10,0,0,0" Padding="8,2" Background="#3C3C3C" Foreground="White" BorderBrush="#555"/>
                    </StackPanel>
                </Border>
                <ScrollViewer Name="ConsoleScroller" Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#1E1E1E">
                    <RichTextBox Name="ConsoleOutput" IsReadOnly="True" Background="#1E1E1E" 
                                 FontFamily="Consolas" FontSize="12" BorderThickness="0" 
                                 Padding="8" VerticalScrollBarVisibility="Disabled"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
